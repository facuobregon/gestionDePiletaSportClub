@model gestionDePiletaSportClub.Dtos.UserDto
    @{
        ViewBag.Title = "Datos Personales";
        Layout = "~/Views/Shared/_Layout.cshtml";
        var membershipTypeName = Model.MembershipTypeId == null ? " " : Model.MembershipType.Name;
        var paymentTypeName = Model.PaymentTypeId == null ? " " : Model.PaymentType.Name;
        var levelName = Model.LevelId == null ? " " : Model.Level.Name;
        var birthday = Model.BirthDay == null || Model.BirthDay=="" ? " " : DateTime.Parse(Model.BirthDay, new System.Globalization.CultureInfo("es-AR")).ToString("dd/MM/yyyy");
        var startDate = Model.StartingDate == null || Model.StartingDate=="" ? "" : DateTime.Parse(Model.StartingDate, new System.Globalization.CultureInfo("es-AR")).ToString("dd/MM/yyyy");
        var lastPayment = Model.LastPaymentDate == null || Model.LastPaymentDate == "" ? " " : DateTime.Parse(Model.LastPaymentDate, new System.Globalization.CultureInfo("es-AR")).ToString("dd/MM/yyyy");
        var dueDate = Model.DueDate == null || Model.DueDate == "" ? " " : DateTime.Parse(Model.DueDate, new System.Globalization.CultureInfo("es-AR")).ToString("dd/MM/yyyy");
        var amountOfActivities = Model.AmountOfActivities;
   }

    <h2>Datos Personales</h2>
    <hr />

    <div class="panel panel-primary">
        <div class="panel-heading"> Datos Personales </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-2">Nombre</div>
                <div class="col-xs-10">@Model.Name</div>
            </div>
            <div class="row">
                <div class="col-xs-2">Apellido</div>
                <div class="col-xs-10">@Model.LastName</div>
            </div>
            <div class="row">
                <div class="col-xs-2">DNI</div>
                <div class="col-xs-10">@Model.DNI</div>
            </div>
            <div class="row">
                <div class="col-xs-2">Fecha de Nacimiento</div>
                <div class="col-xs-10">@birthday</div>
            </div>
            <div class="row">
                <div class="col-xs-2">Fecha de Inicio</div>
                <div class="col-xs-10">@startDate</div>
            </div>
            <div class="row">
                <div class="col-xs-2">Plan</div>
                <div class="col-xs-10">@membershipTypeName</div>
            </div>
            <div class="row">
                <div class="col-xs-2">Cantidad de Clases</div>
                <div class="col-xs-10">@amountOfActivities</div>
            </div>
            <div class="row">
                <div class="col-xs-2">Nivel</div>
                <div class="col-xs-10">@levelName</div>
            </div>
            <div class="row">
                <div class="col-xs-2">Forma de pago</div>
                <div class="col-xs-10">@paymentTypeName</div>
            </div>
            <div class="row">
                <div class="col-xs-2">Ultimo pago</div>
                <div class="col-xs-10">@lastPayment</div>
            </div>
            <div class="row">
                <div class="col-xs-2">Fecha de vencimiento</div>
                <div class="col-xs-10">@dueDate</div>
            </div>
        </div>
    </div>
    