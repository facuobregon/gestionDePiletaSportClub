                <p>

                    <span style="font-size: 26px">
                        veni a formar parte del equipo de marea roja
                    </span><br />
                    <a class="btn btn-default" href="">
                        Ver más...
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/images/Sin título-3.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>

                    <span style="font-size: 26px">
                        Ingresa para hacer tus reservas a las clases
                    </span><br />
                    <a class="btn btn-default" href="@Url.Action("Index","Home")">
                        Ingresar
                    </a>
                </p>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Siguiente</span>
    </a>
</div>

